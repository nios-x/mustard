generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  name      String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  likes     Like[]
  comments  Comment[]
  
  friends1  Friend[] @relation("User1Friend")
  friends2  Friend[] @relation("User2Friend")
}


model TempUser {
  id             String   @id @default(uuid())
  username       String   @unique
  email          String   @unique
  password       String?
  name           String
  phone          String
  OTP            String?
  OTPExpiration  DateTime?
  createdAt      DateTime @default(now())
}

model Post {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes     Like[]
  comments  Comment[]
}

model Like {
  id      String   @id @default(uuid())
  userId  String
  postId  String
  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post    Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Comment {
  id          String   @id @default(uuid())
  description String
  createdAt   DateTime @default(now())
  userId      String
  postId      String
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post        Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}
model Friend {
  id         String   @id @default(uuid())
  user1      String
  user2      String
  isAccepted Boolean  @default(false)
  isBlocked  Boolean  @default(false)
  userR1 User @relation(fields: [user1], references: [id], onDelete: Cascade, name: "User1Friend")
  userR2 User @relation(fields: [user2], references: [id], onDelete: Cascade, name: "User2Friend")
  @@unique([user1, user2]) 
}
